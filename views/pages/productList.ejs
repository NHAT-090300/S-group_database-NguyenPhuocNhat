<div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header card-header-primary">
              <h4 class="card-title ">Table Users</h4>
              <p class="card-category"> Here is a subtitle for this table</p>
              <a class="text-light" href="/product/createType">
                <button class="btn btn-sm btn-primary" >
                  Create Product Type
                </button>
            </a>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table">
                  <thead class=" text-primary">
                    <th>
                      ID
                    </th>
                    <th>
                      product type
                    </th>
                    <th class="text-center">
                      potion
                    </th>
 
                  </thead>
                  <tbody>
                    <% data.forEach( (type) => { %>
                    <tr>
                      <td>
                        <%= type.product_type_id %>
                      </td>
                      <td>
                        <%= type.product_type %>
                      </td>
                      <td style="z-index:100" class="text-center">
                        <a class="text-light" href="/product/show_product_type/<%= type.product_type_id %>">
                            <button class="btn btn-sm btn-primary">
                              Show Product
                            </button>
                          </a>
                          <a class="text-light" onclick="checkDelete()" href="product/deleteProductType/<%= type.product_type_id %>">
                            <button class="btn btn-sm btn-danger">
                              Delete
                            </button>
                          </a>
                          <a class="text-light" href="/product/createProduct">
                            <button class="btn btn-sm btn-primary">
                              Create Product
                            </button>
                          </a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        <script>
            function checkDelete(req, res){
              alert('delete product');
            }
          </script>
        <div class="col-md-12">
            <div class="card card-plain">
              <div class="card-header card-header-primary">
                <h4 class="card-title mt-0">Product Type</h4>
                <p class="card-category"> Here is a subtitle for this table</p>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-hover">
                    <thead class="">
                      <th>
                        Product id
                      </th>
                      <th>
                        Product's Name
                      </th>
                      <th>
                        Coney
                      </th>
                      <th>
                        Color
                      </th>
                    </thead>
                    <tbody>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
      </div>
      </div>
    </div>
  </div>